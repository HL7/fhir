<!-- 
  this is an example of a signed consent resource
  
  1. Consent
  
    The patient opts in to sharing CDA documents from a specific 
    author to a specific recipient for a limited period
    
  2. Signature 
  
    The patient signs this with a digital signature. In FHIR,
    signatures are stored in a provenance resource. To see
    that, go the provenance examples, and look for the 
    consent signature example
-->

<Consent xmlns="http://hl7.org/fhir"> 
  <id value="consent-example-signature"/>
  <contained>
    <ValueSet>
      <id value="vs"/>
      <status value="active"/>
      <compose>  
        <include>
          <system value="http://loinc.org"/>
          <concept>  
           <code value="34133-9"/>
          </concept>
          <concept>  
           <code value="18842-5"/>
          </concept>
        </include>
      </compose>
    </ValueSet>
  </contained>
  <identifier>
    <system value="urn:oid:2.16.840.1.113883.3.72.5.9.1"/>
    <value value="494e0c7a-a69e-4fb4-9d02-6aae747790d7"/> <!-- consent GUID generated by application -->
  </identifier>
  <status value="active"/>
  <dateTime value="2016-05-26T00:41:10-04:00"/>
  <period>
    <start value="2015-10-10"/>
    <end value="2016-10-10"/>
  </period>
  <patient>
    <reference value="Patient/72"/> <!-- one of the stock examples -->
  </patient>
  <author>
    <reference value="Patient/72"/> <!-- author is patient themselves, and they sign -->
  </author>
  <organization>
    <reference value="Organization/example"/> 
  </organization>
  <!-- no source for this one - it is the signed master -->
  <policy value="http://hl7.org/fhir/ConsentPolicy/opt-in"/>
  
  <!-- this consent relates to sharing data with a specific recipient -->
  <recipient>
     <reference value="Practitioner/13"/>  <!-- Stock practitioner -->
  </recipient>
  
  <!-- here's an opt-in: share CDA documents of type Discharge Summary 
    + Summarization of Episode Note from a specific author -->
  <except>  
    <type value="permit"/>
    <actor>  
      <role>
        <coding>
          <system value="http://hl7.org/fhir/v3/ParticipationType"/>
          <code value="AUT"/>
        </coding>
      </role>
      <reference>
        <reference value="Practitioner/xcda-author"/> 
     </reference>
    </actor>
    
    <data>  
      <meaning value="document"/>
      <reference>
        <reference value="#vs"/>
      </reference>
    </data>
  </except>
</Consent>