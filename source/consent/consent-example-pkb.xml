  <status value="active"/>
    
  <patient>
    <reference value="Patient/example"/>
    <display value="...example patient..."/>
  </patient>

  <dateTime value="2016-06-16"/>
 
  <organization>
    <reference value="Organization/pkb"/>
	  <display value="Patients Know Best"/>
