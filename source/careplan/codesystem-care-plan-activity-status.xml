  <description value="Codes that reflect the current state of a care plan activity within its overall life cycle."/>
  <caseSensitive value="true"/>
  <valueSet value="http://hl7.org/fhir/ValueSet/care-plan-activity-status"/>
  <hierarchyMeaning value="is-a"/>
  <content value="complete"/>
  <concept>
    <code value="not-started"/>
    <display value="Not Started"/>
    <definition value="Care plan activity is planned but no action has yet been taken."/>
  </concept>
  <concept>
    <code value="scheduled"/>
    <display value="Scheduled"/>
    <definition value="Appointment or other booking has occurred but activity has not yet begun."/>
  </concept>
  <concept>
    <code value="in-progress"/>
    <display value="In Progress"/>
    <definition value="Care plan activity has been started but is not yet complete."/>
  </concept>
  <concept>
    <code value="on-hold"/>
    <display value="On Hold"/>
    <definition value="Care plan activity was started but has temporarily ceased with an expectation of resumption at a future time."/>
  </concept>
  <concept>
    <code value="completed"/>
    <display value="Completed"/>
    <definition value="Care plan activity has been completed (more or less) as planned."/>
  </concept>
  <concept>
    <code value="cancelled"/>
    <display value="Cancelled"/>
    <definition value="The planned care plan activity has been withdrawn."/>
    <concept>
      <code value="stopped"/>
      <display value="Stopped"/>
      <definition value="The planned care plan activity has been ended prior to completion after the activity was started."/>
    </concept>
  </concept>
  <concept>
    <code value="unknown"/>
    <display value="Unknown"/>
    <definition value="The current state of the care plan activity is not known.  Note: This concept is not to be used for &quot;other&quot; - one of the listed statuses is presumed to apply, but the authoring/source system does not know which one."/>
  </concept>
  <concept>
    <code value="entered-in-error"/>
    <display value="Entered in Error"/>
    <definition value="Care plan activity was entered in error and voided."/>
  </concept>
