			</coding>
		</code>
		<status value="completed"/>
		<statusReason value="Achieved weight loss to mitigate diabetes risk." />
		<prohibited value="false"/>
		<scheduledTiming>
			<repeat>
				<frequency value="1"/>
				<period value="1"/>
				<periodUnit value="d"/>
			</repeat>
		</scheduledTiming>
		<location>
			<display value="Patient's home" />
		</location>
		<performer>
			<reference value="Patient/example"/>
