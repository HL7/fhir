  <version value="6.0.0"/>
  <name value="Getwsbindingtoken"/>
  <title value="Get a binding token for use in a websocket connection"/>
  <status value="draft"/>
  <kind value="operation"/>
  <date value="2021-01-05T10:01:24+11:00"/>
  <publisher value="HL7 (FHIR Project)"/>
