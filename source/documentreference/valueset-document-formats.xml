<ValueSet xmlns="http://hl7.org/fhir" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://hl7.org/fhir ../../schema/valueset.xsd">
  <name value="Document Format Codes"/>
  <publisher value="HL7 FHIR"/>
  <telecom>  
    <system value="url"/>
    <value value="http://hl7.org/fhir"/>
  </telecom>
  <description value="Format codes - logical formats for documents (as opposed to mime types which are literal formats)"/>
  <status value="draft"/>
  <define>
    <system value="http://hl7.org/fhir/document-formats"/>
    <caseSensitive value="true"/>
    <concept>
      <code value="text"/>
      <display value="Plain text in some known character encoding"/>
    </concept>
    <concept>
      <code value="pdf"/>
      <display value="Portable Printable Document (pdf, xps)"/>
    </concept>
    <concept>
      <code value="document"/>
      <display value="Word Document (.rtf, .doc, .docx, .odt)"/>
    </concept>
    <concept>
      <code value="spreadsheet"/>
      <display value="Spreadsheet (.xls, .xlsx, .odt)"/>
    </concept>
    <concept>
      <code value="pixels"/>
      <display value="pixel map image (.dicom, .bmp, .jpg, .png, .gif, etc)"/>
    </concept>
    <concept>
      <code value="drawing"/>
      <display value="Vector image (.svg, .eps, etc)"/>
    </concept>
    <concept>
      <code value="html"/>
      <display value="HTML markup"/>
    </concept>
    <concept>
      <code value="signature"/>
      <display value="XML Digital Signature"/>
    </concept>
    <concept>
      <code value="cda"/>
      <display value="Clinical Document (e.g. CDA or templated CDA, or Dicom Structured Report)"/>
      <concept>
        <code value="ccda"/>
        <display value="Consolidated Clinical Document"/>
      </concept>
    </concept>
    <concept>
      <code value="ccr"/>
      <display value="ASTM CCR document"/>
    </concept>
    <concept>
      <code value="v2"/>
      <display value="Archived HL7 v2 message"/>
    </concept>
  </define>
</ValueSet>
