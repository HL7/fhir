  <title value="Appropriate Testing for Children with Pharyngitis"/>
  <status value="active"/>
  <experimental value="true"/>
  <description value="Percentage of children 3-18 years of age who were diagnosed with pharyngitis, ordered an antibiotic and received a group A streptococcus (strep) test for the episode."/>
  <purpose value="Measure of children with a group A streptococcus test in the 7-day period from 3 days prior through 3 days after the diagnosis of pharyngitis"/>
  <topic>
    <coding>
      <system value="http://hl7.org/fhir/c80-doc-typecodes" />
      <code value="57024-2" />
    </coding>
  </topic>
