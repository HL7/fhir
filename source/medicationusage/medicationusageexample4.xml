<?xml version="1.0" encoding="UTF-8"?>
<!-- This example is a fully populated example where a patient reports they took this in the past but are not taking it now  -->
<MedicationUsage xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://hl7.org/fhir ../../schema/medicationusage.xsd"
 xmlns="http://hl7.org/fhir">
  <id value="example004"/>
  <status value='recorded'/>
  <medication>
    <concept>
    <coding>
      <system value="http://snomed.info/sct"/>
      <code value="27658006"/>
      <display value="Amoxicillin (product)"/>
    </coding>
    </concept>
  </medication>
  <subject>
    <reference value="Patient/pat1"/>
    <display value="Donald Duck"/> 
  </subject>
  <effectiveDateTime value="2014-01-23"></effectiveDateTime>
  <dateAsserted value="2015-02-22"/>
  <informationSource>
    <reference value="Patient/pat1"/>
    <display value="Donald Duck"/> 
  </informationSource>


  

  <note>
    <text value="Patient indicates they miss the occasional dose" />
  </note>
  <dosage>
    <text value="one capsule three times daily" />
    <timing>
      <repeat>
        <frequency value="3"/>
        <period value="1"/>
        <periodUnit value="d"/>
      </repeat>
    </timing>
    <asNeeded value="false" />
    <route>
      <coding>
        <system value="http://snomed.info/sct"/>
        <code value="260548002"/>
        <display value="Oral"/>
      </coding>
    </route>
    <maxDosePerPeriod>
      <numerator>
        <value value="3"/>
        <unit value="capsules" />
        <system value="http://snomed.info/sct" />
        <code value="385055001"/>
      </numerator>
      <denominator>
        <value value="1"/>
        <system value="http://unitsofmeasure.org"/>
        <code value="d"/>
      </denominator>
    </maxDosePerPeriod>
  </dosage>
<adherence>
  <code>
    <coding>
      <system value="http://hl7.org/fhir/CodeSystem/medication-usage-adherence"/>
      <code value="not-taking"/>
      <display value="Not Taking"/>
    </coding>
  </code>
  <reason>
      <coding>
        <system value="http://snomed.info/sct"/>
        <code value="266710000"/>
        <display value="Drugs not taken/completed"/>
      </coding>
  </reason>
</adherence>
</MedicationUsage>